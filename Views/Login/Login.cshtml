@model COSMESTIC.Models.LoginModel
@{
    Layout = null;
}



<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - COSMESTIC</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/Login.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/COSMESTIC.styles.css" asp-append-version="true" />
    <!-- Material Icons từ Google Fonts -->
    @* <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200&icon_names=keyboard_double_arrow_left" /> *@
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined" />

    @* <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200&icon_names=keyboard_double_arrow_right" /> *@

</head>
<body >
    <div class="home-container d-flex" style="margin-top: 30px; margin-left: 30px;">
        <span class="material-symbols-outlined " style="font-size: 30px; color: black;">home</span>
        <form action="/">
            <button id="home-back" style="font-size: 20px;">Home</button>
        </form>
    </div>
    <div class="container pt-5 ">
      
       <div class="row pb-5">
            @* <div class="col col1 pb-5 position-relative" style="height: 600px;"> *@
            @*     <img src="~/Img/Anh-my-pham-3.jpg" style="width: 100%; height: 100%; object-fit: cover;" /> *@
            @*     <h1 class="position-absolute h2-text  " style="padding-top: 200px;"> *@
                  
            @*     </h1> *@
            @*     <span class="material-symbols-outlined next position-absolute"> *@
            @*         arrow_forward_ios *@
            @*     </span> *@
            @*     <span class="material-symbols-outlined prev position-absolute"> *@
            @*         arrow_back_ios *@
            @*     </span> *@
            @* </div> *@
            <div id="carouselExampleCaptions" class="carousel slide col">
                <div class="carousel-indicators">
                    <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                    <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
                    <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
                </div>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="~/Img/ad04.jpg" class="d-block w-100" alt="...">
                        <div class="carousel-caption d-none d-md-block">
                            <h5 style="font-size: 30px; ">Sản phẩm hot nhất 2025</h5>
                            <p>Cập nhật xu hướng, nắm bắt thời thượng cùng bộ sưu tập mới.</p>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img src="~/Img/ads05.jpg" class="d-block w-100" alt="...">
                        <div class="carousel-caption d-none d-md-block">
                            <h5 style="font-size: 30px; color:#346A54;">Chất lượng làm nên thương hiệu</h5>
                            <p>Cam kết hàng chính hãng, đổi trả miễn phí trong 7 ngày</p>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img src="~/Img/Anh-my-pham-3.jpg" class="d-block w-100" alt="...">
                        <div class="carousel-caption d-none d-md-block">
                            <h5 style="font-size: 30px; ">Ưu đãi đặc biệt hôm nay</h5>
                            <p>Giảm giá lên tới 50% cho tất cả sản phẩm dưỡng da & make-up.</p>
                        </div>
                    </div>
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>

            <div class="col">
                <div class="login-box mx-auto mt-5">
                    <h2 class="text-center mb-4">Đăng nhập</h2>
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger" role="alert">
                            @TempData["ErrorMessage"]
                        </div>
                    }
                    <form method="post">
                        <div class="mb-3">
                            <label for="email" class="form-label">Email</label>
                            <input type="text" class="form-control" id="email" name="email" placeholder="Nhập email">
                        </div>
                        <div class="mb-3">
                            <label for="password" class="form-label">Mật khẩu</label>
                            <input type="password" class="form-control" id="password" name="password" placeholder="Nhập mật khẩu">
                        </div>
                        <button type="submit" class="btn btn-outline-success w-100">Đăng nhập</button>
                        <div>Bạn chưa có tài khoản? <a href="/Register/Register">Đăng ký</a></div>
                    </form>
                </div>
            </div>
       </div>
      
    </div>
    <script src="~/js/Login.js"></script>
    
     <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script> 
</body>
</html>
