@model COSMESTIC.Models.Product.DetailProduct

@{
    ViewData["Title"] = "Chi tiết sản phẩm (Admin)";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2Lw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <style>
        body {
        background-color: #f0f7f4;
        }

        .product-card {
        border: none;
        border-radius: 15px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        background-color: #fff;
        }

        .product-image {
        max-height: 350px;
        object-fit: cover;
        border-radius: 15px 0 0 15px;
        }

        .product-details {
        padding: 2rem;
        }

        .product-title {
        font-size: 1.8rem;
        font-weight: 600;
        color: #2f4f4f;
        }

        .product-info {
        font-size: 1rem;
        color: #6c757d;
        line-height: 1.6;
        }

        .product-info strong {
        color: #2f4f4f;
        }

        .product-price {
        font-size: 1.3rem;
        font-weight: 700;
        color: #28a745;
        }

        .product-description {
        color: #6c757d;
        line-height: 1.6;
        margin-bottom: 1rem;
        }

        .product-revenue {
        font-size: 1.2rem;
        font-weight: 600;
        color: #ff6f61;
        }

        .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
        }

        .btn-secondary:hover {
        background-color: #5a6268;
        border-color: #545b62;
        }

        .stat-card {
        background-color: #f8f9fa;
        border-radius: 8px;
        padding: 1rem;
        margin-bottom: 1rem;
        }

        .stat-label {
        font-size: 0.9rem;
        color: #6c757d;
        margin-bottom: 0.5rem;
        }

        .stat-value {
        font-size: 1.2rem;
        font-weight: 600;
        color: #2f4f4f;
        }
    </style>
</head>
<body>
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="product-card">
                    <div class="row g-0">
                        <!-- Hình ảnh sản phẩm -->
                        <div class="col-md-5">
                            @if (!string.IsNullOrEmpty(Model.ImagePath))
                            {
                                <img src="@Url.Content("~/")@Model.ImagePath" alt="@Model.ProductName" class="product-image img-fluid w-100" />
                            }
                            else
                            {
                                <div class="d-flex align-items-center justify-content-center bg-light w-100 h-100" style="border-radius: 15px 0 0 15px;">
                                    <i class="fas fa-image text-muted fa-3x"></i>
                                </div>
                            }
                        </div>

                        <!-- Thông tin sản phẩm -->
                        <div class="col-md-7">
                            <div class="product-details">
                                <h1 class="product-title">@Model.ProductName</h1>
                                <div class="product-info">
                                    <p><strong>Danh mục:</strong> @Model.CatalogName</p>
                                    <p class="product-price"><strong>Giá tiền:</strong> @Model.Price.ToString("C", new System.Globalization.CultureInfo("vi-VN"))</p>
                                    <p class="product-description"><strong>Mô tả sản phẩm:</strong> @Model.ProductDescription</p>
                                </div>

                                <!-- Thống kê -->
                                <div class="stat-card">
                                    <div class="stat-label">Số lượng tổng</div>
                                    @{
                                        var total = @Model.TotalQuantity + @Model.SoldQuantity;
                                    }
                                    <div class="stat-value">total</div>
                                </div>
                                <div class="stat-card">
                                    <div class="stat-label">Số lượng đã bán</div>
                                    <div class="stat-value">@Model.SoldQuantity</div>
                                </div>
                                <div class="stat-card">
                                    <div class="stat-label">Số lượng còn lại</div>
                                    <div class="stat-value">@Model.TotalQuantity</div>
                                </div>
                                <div class="stat-card">
                                    <div class="stat-label">Doanh thu</div>
                                    <div class="product-revenue">@Model.Revenue.ToString("C", new System.Globalization.CultureInfo("vi-VN"))</div>
                                </div>

                                <div class="mt-4">
                                    <a href="@Url.Action("Index", "AdminProduct")" class="btn btn-secondary">
                                        <i class="fas fa-arrow-left me-2"></i>Quay lại
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>