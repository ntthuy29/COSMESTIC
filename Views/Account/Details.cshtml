<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chi Tiết Người Dùng | Admin BeautyCos</title>
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        :root {
            --primary-color: #2e7d32; /* Màu xanh lá tươi sáng */
            --secondary-color: #81c784; /* Màu xanh lá đậm hơn */
        --light-green: #C8E6C9; /* Màu xanh lá nhạt */
        --dark-color: #343a40;
        --light-color: #f8f9fa;
        }

        body {
        background-color: #f5f5f5;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

       /*  .sidebar {
        background: linear-gradient(180deg, var(--primary-color), var(--secondary-color));
        min-height: 100vh;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        } */

        .sidebar .nav-link {
        color: white;
        margin-bottom: 5px;
        border-radius: 5px;
        padding: 10px 15px;
        }

        .sidebar .nav-link:hover, .sidebar .nav-link.active {
        background-color: rgba(255, 255, 255, 0.2);
        }

        .sidebar .nav-link i {
        margin-right: 10px;
        }

        .main-content {
        padding: 20px;
        }

        .card {
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        margin-bottom: 20px;
        border: none;
        }

        .card-header {
        background-color: white;
        border-bottom: 1px solid #eee;
        font-weight: 600;
        padding: 15px 20px;
        border-radius: 10px 10px 0 0 !important;
        }

        .user-avatar {
        width: 150px;
        height: 150px;
        border-radius: 50%;
        object-fit: cover;
        border: 5px solid white;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

        .user-info-label {
        font-weight: 600;
        color: #6c757d;
        }

        .user-info-value {
        font-weight: 500;
        }

        .badge-role {
        padding: 8px 12px;
        font-size: 0.9rem;
        font-weight: 500;
        background-color: var(--primary-color);
        }

        .btn-edit {
        background-color: var(--primary-color);
        border: none;
        padding: 8px 20px;
        color: white;
        }

        .btn-edit:hover {
        background-color: var(--secondary-color);
        color: white;
        }

        .order-history {
        max-height: 300px;
        overflow-y: auto;
        }

        .order-item {
        border-left: 3px solid var(--primary-color);
        transition: all 0.3s;
        }

        .order-item:hover {
        background-color: var(--light-green);
        }

        .status-delivered {
        color: var(--secondary-color);
        }

        .status-pending {
        color: #ffc107;
        }

        .status-cancelled {
        color: #dc3545;
        }

        /* Các trạng thái người dùng */
        .status-gold {
        color: #FFD700;
        }

        .status-silver {
        color: #C0C0C0;
        }

        .status-bronze {
        color: #CD7F32;
        }

        /* Thêm các hiệu ứng cho nút và các phần tương tác */
        .btn-outline-primary {
        color: var(--primary-color);
        border-color: var(--primary-color);
        }

        .btn-outline-primary:hover {
        background-color: var(--primary-color);
        border-color: var(--primary-color);
        color: white;
        }

        /* Màu cho các badge trạng thái */
        .bg-success {
        background-color: var(--primary-color) !important;
        }

        /* Màu cho bảng */
        table {
        border-collapse: collapse;
        width: 100%;
        }

        th {
        background-color: var(--primary-color);
        color: white;
        padding: 10px;
        text-align: left;
        }

        td {
        padding: 10px;
        border-bottom: 1px solid #ddd;
        }

        tr:hover {
        background-color: var(--light-green);
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row">

            <!-- Main Content -->

            <div class="col-md-10 main-content">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h3 class="mb-0">Chi tiết người dùng</h3>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="#">Dashboard</a></li>
                            <li class="breadcrumb-item"><a href="#">Quản lý người dùng</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Chi tiết người dùng</li>
                        </ol>
                    </nav>
                </div>

                <!-- User Profile Section -->
                <div class="row">
                    <div class="col-md-4">
                        <div class="card">
                            <div class="card-body text-center">
                                <img src="https://randomuser.me/api/portraits/women/45.jpg" alt="User Avatar" class="user-avatar mb-3">
                                <h4>@Model.FullName</h4>
                                <span class="badge bg-success badge-role mb-3">@Model.Role</span>

                                <div class="d-flex justify-content-center mb-3">
                                    <div class="text-center mx-3">
                                        <h5>@Model.totalItems</h5>
                                        <p class="text-muted mb-0">Đơn hàng</p>
                                    </div>
                                    <div class="text-center mx-3">
                                        <h5>@Model.totalAmount</h5>
                                        <p class="text-muted mb-0">Tổng chi tiêu</p>
                                    </div>
                                </div>

                                <button class="btn btn-primary btn-edit mb-3">
                                    <i class="fas fa-edit me-2"></i>Chỉnh sửa
                                </button>

                                <hr>

                                <div class="text-start">
                                    <h6 class="mb-3"><i class="fas fa-info-circle me-2"></i>Thông tin cơ bản</h6>
                                    <div class="row mb-2">
                                        <div class="col-5 user-info-label">ID:</div>
                                        <div class="col-7 user-info-value">@Model.UserID</div>
                                    </div>
                                    <div class="row mb-2">
                                        <div class="col-5 user-info-label">Ngày tạo:</div>
                                        <div class="col-7 user-info-value">@Model.CreatedDate</div>
                                    </div>
                                    <div class="row mb-2">
                                        <div class="col-5 user-info-label">Trạng thái:</div>
                                        <div class="col-7 user-info-value">
                                            <span class="badge bg-success">Hoạt động</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-8">
                        <div class="card mb-4">
                            <div class="card-header">
                                <i class="fas fa-user-circle me-2"></i>Thông tin cá nhân
                            </div>
                            <div class="card-body">
                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <label class="user-info-label">Họ và tên</label>
                                        <p class="user-info-value">@Model.FullName</p>
                                    </div>
                                    <div class="col-md-6">
                                        <label class="user-info-label">Giới tính</label>
                                        <p class="user-info-value">Nữ</p>
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <label class="user-info-label">Ngày sinh</label>
                                        <p class="user-info-value">@Model.DateOfBirth</p>
                                    </div>
                                    <div class="col-md-6">
                                        <label class="user-info-label">Số điện thoại</label>
                                        <p class="user-info-value">@Model.PhoneNumber</p>
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <label class="user-info-label">Email</label>
                                        <p class="user-info-value">@Model.Email</p>
                                    </div>
                                    @*  <div class="col-md-6">
                                        <label class="user-info-label">Địa chỉ</label>
                                        <p class="user-info-value">Số 45, ngõ 12, Trần Duy Hưng, Cầu Giấy, Hà Nội</p>
                                    </div> *@
                                </div>
                            </div>
                        </div>

                        <div class="card">
                            <div class="card-header">
                                <i class="fas fa-shopping-bag me-2"></i>Lịch sử đơn hàng gần đây
                            </div>
                            <div class="card-body order-history">
                                @foreach (var order in Model.Orders)
                                {
                                    <div class="order-item p-3 mb-3">
                                        <div class="d-flex justify-content-between">
                                            <h6>Đơn hàng @order.OrderId</h6>
                                            @if (@order.Status == "Đã hoàn thành")
                                            {
                                                <span class="status-delivered"><i class="fas fa-check-circle me-1"></i>Đã giao</span>
                                            }
                                            else if(order.Status == "Đã hủy")
                                            {
                                                <span class="status-cancelled"><i class="fas fa-times-circle me-1"></i>Đã hủy</span>
                                            }
                                            else
                                            {
                                                <span class="status-pending"><i class="fas fa-clock me-1"></i>@Model.Status</span>
                                            }
                                        </div>
                                        <p class="text-muted mb-1">Ngày đặt:@order.OrderDate</p>
                                        <p class="mb-1">3 sản phẩm - Tổng tiền: @order.TotalAmount</p>
                                        <a href="#" class="text-primary">Xem chi tiết</a>
                                    </div>


                                }
                                <div class="text-center mt-3">
                                    <a href="#" class="btn btn-outline-primary">Xem tất cả đơn hàng</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap 5 JS Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>