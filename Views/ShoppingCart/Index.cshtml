@model COSMESTIC.Models.Data.ShoppingCart
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container my-5">
    <div class="card shadow-sm">
        <div class="card-header text-white" style="background-color: #B27474;">
            <h4 class="mb-0">🛒 Giỏ hàng (@Model.totalQuantity) sản phẩm</h4>
        </div>
        <div class="card-body">
            @if (Model.cartItems.Count == 0)
            {
                <div class="alert alert-info text-center">
                    Giỏ hàng của bạn hiện tại trống. Hãy thêm sản phẩm vào giỏ hàng!
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>Ảnh</th>
                                <th>Sản phẩm</th>
                                <th class="text-center">Số lượng</th>
                                <th class="text-end">Đơn giá</th>
                                <th class="text-end">Tổng giá</th>
                                <th class="text-center">Xóa</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.cartItems)
                            {
                                <tr>
                                    <td><img src="@Url.Content("~/" + item.products.imagePath)" style="width: 50px;height: 50px;" /></td>
                                    <td>@item.products.productName</td>
                                    <td class="text-center">@item.quantity</td>
                                    <td class="text-end">@item.unitprice.ToString("N0") ₫</td>
                                    <td class="text-end">@((item.quantity * item.unitprice).ToString("N0")) ₫</td>
                                    <td class="text-center">
                                        <form method="post" action="@Url.Action("RemoveFromCart", "Cart")">
                                            <input type="hidden" name="cartItemID" value="@item.cartItemID" />
                                            <button type="submit" class="btn btn-outline-danger btn-sm">
                                                <i class="bi bi-trash"></i> Xóa
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <div class="row mt-4">
                    <div class="col-md-8">
                        <div class="p-3 bg-light rounded shadow-sm">
                           
                            <p><strong style="font-size: 20px; color: red">Tổng tiền:</strong> @Model.totalPrice.ToString("N0") ₫</p>
                        </div>
                    </div>
                    <div class="col-md-4 d-flex align-items-center justify-content-end">
                        <form method="post" action="@Url.Action("CreateOrder", "Order")">
                            <button type="submit" class="btn  btn-lg" style="background-color: darkred;color: white;">
                                <i class="bi bi-credit-card"></i> Đặt hàng
                            </button>
                        </form>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
