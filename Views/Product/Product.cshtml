@model List<COSMESTIC.Models.Data.Products>
@{
}
@section Styles {
    <link rel="stylesheet" href="~/css/product.css" />
}

<div id="ads">
    <img id="ads-img" src="/Img/ads01.jpg" alt="Ad Image" style="width: 100%; height: 100%; object-fit: contain; " />
    </div>
    <div class="container container-product">
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
            @foreach(var product in Model)
            {
            <div class="col ">
                <div class="card h-100 shadow-sm card-radius">
                    <img src="@Url.Content("~/" + product.imagePath)" class="card-img-top" style="height: 200px; object-fit: contain;" />
                    <div class="card-body">
                        <h6 class="card-title text-truncate" title="@product.productName">@product.productName</h6>

                  
                        <p class="mb-1 text-danger fw-bold">@product.price.ToString("N0") ₫</p>
                     
                        

                        <div class="mt-3 d-grid">
                            <button class="btn btn-outline-warning">🛒 Thêm vào giỏ</button>
                        </div>
                    </div>
                </div>
            </div>
            }


            </div>

        </div>

      <script src="~/js/product.js"></script>
    
