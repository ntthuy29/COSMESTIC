@{
}
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div  " id="password">
    <div class="d-flex justify-content-center tab-content" style="padding: 20px;">
        <div class="card shadow-sm" style="width: 400px; border-radius: 12px; ">
            <div class="card-body">
                <h5 class="card-title text-center mb-4 fw-bold text-danger">Đổi mật khẩu</h5>
                <!-- Nội dung đổi mật khẩu -->
                @if (ViewData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success text-center">
                        @ViewData["SuccessMessage"]
                    </div>
                }
                <form asp-action="ChangePassword" asp-controller="Account" method="post">
                    <div>
                        <label for="oldPassword" class="form-label">Mật khẩu hiện tại</label>
                        <input type="password" id="oldPassword" class="form-control" name="oldPassword">
                        @if (ViewData.ModelState["oldPassword"]?.Errors.Count > 0)
                        {
                            <div class="text-danger">@ViewData.ModelState["oldPassword"]?.Errors[0].ErrorMessage</div>
                        }
                    </div>
                    <div>
                        <label for="newPassword" class="form-label">Mật khẩu mới</label>
                        <input type="password" id="newPassword" class="form-control" name="newPassword">
                    </div>
                    <div>
                        <label for="confirmPassword" class="form-label">Xác nhận mật khẩu mới</label>
                        <input type="password" id="confirmPassword" class="form-control" name="confirmPassword">
                        @if (ViewData.ModelState["confirmPassword"]?.Errors.Count > 0)
                        {
                            <div class="text-danger">@ViewData.ModelState["confirmPassword"]?.Errors[0].ErrorMessage</div>
                        }
                    </div>
                    <button type="submit" class="btn btn-danger mt-3">Lưu thay đổi</button>
                </form>
            </div>
        </div>
        </div>

</div>