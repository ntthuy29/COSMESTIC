@model List<COSMESTIC.Models.Data.Orders>

<h3>Danh sách đơn hàng</h3>

@if (Model == null || !Model.Any())
{
    <p>Không có đơn hàng nào.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Mã đơn hàng</th>
                <th>Ngày đặt</th>
                <th>Tổng tiền</th>
                <th>Trạng thái</th>
                <th>Chi tiết</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.orderID</td>
                    <td>@order.orderDate.ToString("dd/MM/yyyy")</td>
                    <td>@order.totalAmount.ToString("N0") ₫</td>
                    <td>@order.status</td>
                    <td><a href="@Url.Action("OrderDetails", new { orderId = order.orderID })">Xem chi tiết</a></td>
                </tr>
            }
        </tbody>
    </table>
}
